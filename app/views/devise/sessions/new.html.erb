<!-- TODO: Find a more sofisticated way of doing the background image -->
  <body class="bkg-login" style="background-color: transparent;">
  <div class="content">
  <div id="login">
    <h2 style="text-align: center;">Log in</h2> </br>
     
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div><br>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Super secret password" %>
      </div><br>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div><br>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>
  </div>

</div>
</body>