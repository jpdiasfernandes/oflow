<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Distance</th>
      <th>Date</th>
      <th>Distance</th>
      <th>Avg hr</th>
      <th>Max hr</th>
      <th>Effort</th>
      <th>User</th>
      <th>Elevation</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.title %></td>
        <td><%= activity.description %></td>
        <td><%= activity.distance %></td>
        <td><%= activity.date %></td>
        <td><%= activity.distance %></td>
        <td><%= activity.avg_hr %></td>
        <td><%= activity.max_hr %></td>
        <td><%= activity.effort %></td>
        <td><%= activity.user_id %></td>
        <td><%= activity.elevation %></td>
        <td><%= activity.image_path %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

